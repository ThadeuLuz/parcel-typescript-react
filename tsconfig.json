{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    //     "noEmitOnError": true

    //     "module": "commonjs",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "./lib/",
    //     "target": "es5",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    // "jsx": "preserve",
    //     "lib": ["es2017", "dom"],
    "lib": ["es2017", "dom"],
    //     "strict": true,
    "strict": true,
    //     "noUnusedLocals": true,
    "noUnusedLocals": true,
    //     "noUnusedParameters": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"],
  "exclude": [".git", "node_modules"]
}
